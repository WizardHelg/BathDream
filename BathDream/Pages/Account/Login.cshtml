@page
@model BathDream.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Вход в личный кабинет";
}

<br />
<br />


<div class="row container-center">

    <div class="col-lg-8 col-xs-12 lk-auth vertical-align container-center wrap">
        <div class="lk-auth-title col-xs-12">Войти в<br>личный кабинет</div>

        <form method="post" class="col-lg-12">
            <div class="lk-form col-xs-12 vertical-align wrap">
                <div class="col-sm-8 col-xs-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="@Model.Input.GUID" value="@Model.Input.GUID" />
                        <input type="hidden" asp-for="@Model.Input.ReturnUrl" value="@Model.Input.ReturnUrl" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.TempCode" style="margin-right: 60px;"></label>
                        <input type="text" asp-for="Input.TempCode" value="@Model.Input.TempCode" />
                        <span asp-validation-for="Input.TempCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Phone" style="margin-right: 60px;"></label>
                        <input asp-for="Input.Phone" placeholder="Формат: 7, далее 10 цифр номера без разделителей" class="form-control">
                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Code"></label>
                        <input asp-for="Input.Code" placeholder="Код подтверждения из SMS" class="form-control" />
                        <span asp-validation-for="Input.Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-sm-4 col-xs-6 text-center">
                    <div class="form-group" style="margin-bottom: 0px; margin-left: 0px; margin-right: 0px;">
                        @if (Model.Input.CheckMode)
                        {
                            <button asp-page-handler="CheckCode" class="btn btn-block btn-success">Войти</button>
                            <button asp-page-handler="SendCode" class="btn btn-block btn-success">Отправить код повторно</button>
                        }
                        else
                        {
                            <button asp-page-handler="SendCode" class="btn btn-block btn-success">Отправить код</button>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>