@page
@model BathDream.Pages.Account.Manage.ProfileExecutorModel
@{
    ViewData["Title"] = "Редактирование профиля";
}

<br />
<br />

<div class="container">
    <div class="row container-center">
        <div class="col-lg-8 col-xs-12 lk-auth-reg vertical-align container-center wrap">
            <div class="lk-auth-title col-xs-12">@ViewData["Title"]</div>
            <form method="post" class="form-horizontal" style="width:100%">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Input.Role" />
                </div>
                <div class="form-group">
                    <input type="hidden" asp-for="Input.Id" />
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Name" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Famaly" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Famaly" class="form-control" />
                        <span asp-validation-for="Input.Famaly" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Patronymic" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Patronymic" class="form-control" />
                        <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Phone" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Phone" class="form-control" />
                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Address" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Address" class="form-control" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Input.About" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.About" class="form-control" />
                        <span asp-validation-for="Input.About" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <a asp-page="/Account/Executor" class="btn btn-block btn-success">Вернутся в профиль</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <a asp-page="/Account/Manage/ChangePassword" asp-route-id="@Model.Input.Id" asp-route-returnUrl="@Url.Page("/Account/Manage/ProfileExecutor")" class="btn btn-block btn-success">Сменить пароль</a>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-block btn-success">Сохранить</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<br />
