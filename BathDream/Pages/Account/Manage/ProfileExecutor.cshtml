@page
@model BathDream.Pages.Account.Manage.ProfileExecutorModel
@{
    ViewData["Title"] = "Профиль";
}

<br />
<br />
<h2>@ViewData["Title"]</h2>
<div class="col-md-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input type="hidden" asp-for="Input.Role" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="Input.Id" />
        </div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input readonly asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Name"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Famaly"></label>
            <input asp-for="Input.Famaly" class="form-control" />
            <span asp-validation-for="Input.Famaly" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Patronymic"></label>
            <input asp-for="Input.Patronymic" class="form-control" />
            <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Phone"></label>
            <input asp-for="Input.Phone" class="form-control" />
            <span asp-validation-for="Input.Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Address"></label>
            <input asp-for="Input.Address" class="form-control" />
            <span asp-validation-for="Input.Address" class="text-danger"></span>
        </div>
        <a asp-page="/Test/Index" class="btn btn-block btn-success">Вернутся</a>
        <a asp-page="/Account/Manage/ChangePassword" asp-route-id="@Model.Input.Id" asp-route-returnUrl="@Url.Page("/Account/Manage/ProfileExecutor")" class="btn btn-block btn-success">Сменить пароль</a>
        <button type="submit" class="btn btn-block btn-success">Сохранить</button>
    </form>
</div>