@page
@model BathDream.Pages.Account.Manage.ChangePasswordModel
@{
    ViewData["Title"] = "Смена пароля";
}

<br />
<br />
<h2>@ViewData["Title"]</h2>
<div class="col-md-4">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <input type="hidden" asp-for="@Model.Input.Id" />
        </div>
        <div class="form-group">
            <input type="hidden" asp-for="@Model.Input.ReturnUrl" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Input.Email"></label>
            <input readonly asp-for="@Model.Input.Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="@Model.Input.OldPassword"></label>
            <input asp-for="@Model.Input.OldPassword" class="form-control" />
            <span asp-validation-for="@Model.Input.OldPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Input.NewPassword"></label>
            <input asp-for="@Model.Input.NewPassword" class="form-control" />
            <span asp-validation-for="@Model.Input.NewPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Input.PasswordConfirm"></label>
            <input asp-for="@Model.Input.PasswordConfirm" class="form-control" />
            <span asp-validation-for="@Model.Input.PasswordConfirm" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-block btn-success">Сохранить</button>
        </div>
    </form>
</div>
