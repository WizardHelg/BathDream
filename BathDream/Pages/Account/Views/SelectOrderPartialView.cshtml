@using BathDream.Models
@model BathDream.Pages.Account.CustomerModel.InputModel
@{
}
<h3>Все заказы</h3>
<div>
    <table class="table table-bordered table-hover">
        <tr class="success">
            <th style="text-align:center">№ заказа</th>
            <th style="text-align:center">Дата заказа</th>
            <th style="text-align:center">Адрес объекта</th>
            <th style="text-align:center">Статус</th>
            <th></th>
        </tr>
        @foreach (var order_info in @Model.Orders)
        {
            <tr>

                <td style="text-align: center;">@order_info.Id</td>
                <td style="text-align: center;">@order_info.Date.ToString("dd.MM.yyyy")</td>
                <td style="text-align: center;">@order_info.ObjectAdress</td>
                <td style="text-align: center;">@order_info.StatusName()</td>
                <td style="text-align: center;">
                    @if (Model.CurrentOrder?.Id == order_info.Id)
                    {
                        <a class="btn btn-success disabled" asp-page-handler="SelectOrder" asp-route-id="@order_info.Id">Текущий</a>
                    }
                    else
                    {
                        <a class="btn btn-success" asp-page-handler="SelectOrder" asp-route-id="@order_info.Id">Выбрать</a>
                    }
                </td>
            </tr>
        }
    </table>
</div>