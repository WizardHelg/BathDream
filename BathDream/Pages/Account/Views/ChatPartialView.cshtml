@using BathDream.Models
@model BathDream.Pages.Account.CustomerModel.InputModel
@{;
    string temp = "";
}
@if ((Model.Order.Status & Order.Statuses.Executing) != 0)
{
    temp = "Обсуждение проекта с исполнителем";
}
else
{
    temp = "Обсуждение проекта с архитектором";
}
<h3>@temp</h3>
<form method="post" id="selectForm">
    <div class="messaging">
        <div class="inbox_msg">
            <div class="mesgs">
                <div class="msg_history" id="chatroom"></div>
                <div class="type_msg">
                    <div class="input_msg_write">
                        <!--<textarea id="message"  class="write_msg" placeholder="Написать сообщение"></textarea>-->
                        <input type="text" id="message" class="write_msg" placeholder="Написать сообщение" />
                        <button class="msg_send_btn" id="sendBtn" type="button"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                    </div>
                </div>
            </div>
            @if (Model?.FileItems?.Count > 0)
            {
                <div>
                    <table class="table table-bordered table-hover">
                        <tr class="">
                            <th colspan="3" style="text-align:center">Варианты дизайна</th>

                        </tr>
                        @foreach (var item in Model.FileItems)
                        {
                            <tr>
                                @if (item.Order.SelectedItemId == item.Id)
                                {
                                    <td style="text-align:left;" width="80%">
                                        <i id="@item.Id" class="far fa-image"> @item.FrendlyName (вы выбрали данный варинат)</i>
                                    </td>
                                }
                                else
                                {
                                    <td style="text-align:left;" width="80%">
                                        <i id="@item.Id" class="far fa-image"> @item.FrendlyName</i>
                                    </td>
                                }
                                <td style="text-align:left;" width="10%">
                                    <a class="btn" asp-page-handler="DownloadFile" asp-route-id="@item.Id">Скачать</a>
                                </td>
                                <td style="text-align:left;">
                                    <input id="dataId" value="@item.Id" name="id" hidden />
                                    <input type="submit" asp-page-handler="SelectFile" onclick="Select(this)" name="@item.Id" value="Выбрать" />
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            }
        </div>
    </div>

</form>

<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

<script>
    $(document).ready(function () {
        $(window).keydown(function (event) {
            if (event.keyCode == 13) {
                event.preventDefault();
                return false;
            }
        });
    });
</script>

<script src="/js/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

<script>
    function Select(event) {
        $(document).on('submit', 'form#selectForm', function (e) {
            e.preventDefault();
            var i = event.name;
            var data = {
                id: i
            };

            $.ajax({
                type: 'POST',
                url: 'Customer?handler=SelectFile',
                headers:
                {
                    "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                },
                data: data,
                success: function () {
                    location.reload();
                }
            })
            return false;
        })
    }

    document.getElementById("sendBtn").addEventListener("click", function (e) {
        let message = document.getElementById("message").value;
        connection.invoke("Send", message, "@(Model.Order.Id)");
        document.getElementById("message").value = "";
    });

    connection.on("GetItCustomer", function (data) {
        connection.send("GetMessagesForCustomer", "@(Model.Order.Id)");
    });
</script>



