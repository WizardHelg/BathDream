@using BathDream.Models
@model BathDream.Pages.Account.CustomerModel.InputModel
@{
}

<h3>Обсуждение проекта с архитектором</h3>
<div class="messaging">
    <div class="inbox_msg">
        <div class="mesgs">
            <div class="msg_history" id="chatroom"></div>
            <div class="type_msg">
                <div class="input_msg_write">
                    <!--<textarea id="message"  class="write_msg" placeholder="Написать сообщение"></textarea>-->
                    <input type="text" id="message" class="write_msg" placeholder="Написать сообщение" />
                    <button class="msg_send_btn" id="sendBtn" type="button"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                </div>
            </div>
        </div>
        @if (Model.FileItems.Count > 0)
        {
            <div>
                <table class="table table-bordered table-hover">
                    <tr class="success">
                        <th style="text-align:center">Варианты дизайна</th>
                    </tr>
                    @foreach (var item in Model.FileItems)
                    {
                        <tr>
                            <td style="text-align:left;">
                                <a asp-page-handler="DownloadFile" asp-route-id="@item.Id"><i class="far fa-image">@item.FrendlyName</i></a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        }
    </div>
</div>



<script src="/js/microsoft/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

