@page
@model BathDream.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<br />
<br />

<div class="container-fluid">
    <div class="row container-center">
        <div class="col-lg-8 col-xs-12 lk-auth-reg vertical-align container-center wrap">
            <div class="lk-auth-title col-xs-12">Регистрация<br>нового специалиста</div>
            <form method="post" class="form-horizontal" style="width:100%">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input type="hidden" asp-for="Input.Role" />
                </div>

                <div class="form-group">
                    <label asp-for="Input.Name" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>                    
                </div>
                <div class="form-group">
                    <label asp-for="Input.Famaly" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Famaly" class="form-control" />
                        <span asp-validation-for="Input.Famaly" class="text-danger"></span>
                    </div>                   
                </div>
                <div class="form-group">
                    <label asp-for="Input.Patronymic" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Patronymic" class="form-control" />
                        <span asp-validation-for="Input.Patronymic" class="text-danger"></span>
                    </div>                  
                </div>
                <div class="form-group">
                    <label asp-for="Input.Email" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>                  
                </div>
                <div class="form-group">
                    <label asp-for="Input.Phone" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Phone" class="form-control" />
                        <span asp-validation-for="Input.Phone" class="text-danger"></span>
                    </div>               
                </div>
                <div class="form-group">
                    <label asp-for="Input.Address" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Address" class="form-control" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>                   
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>            
                </div>
                <div class="form-group">
                    <label asp-for="Input.PasswordConfirm" class="col-sm-2 control-label">Повторите пароль</label>
                    <div class="col-sm-10">
                        <input asp-for="Input.PasswordConfirm" class="form-control" />
                        <span asp-validation-for="Input.PasswordConfirm" class="text-danger"></span>
                    </div> 
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-block btn-success">Зарегестрироваться</button>
                    </div>
                </div>
                
            </form>
            <div class="col-sm-12 container-center wrap ">
                <div class="text-reg col-sm-12" style="margin-bottom: 10px; text-align: center">
                    Если у вас уже есть аккаунт, то нажав на кнопку ниже, вы сможете ввести свои данные
                    и войти в свой личный кабинет
                </div>
                <a class="btn btn-default" style="text-decoration: none; " href="/Account/Login">   Войти   </a>
            </div>
        </div>
    </div>
    </div>
    <br />
    <br />
