@page
@model BathDream.Pages.AdminPanel.UserListModel
@{
}

<br />
<br />
<p><a asp-page="/AdminPanel/Index">На главную</a></p>
<br />
<h2>Список пользователей</h2>

<div>
    <table class="table table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>Роль</th>
            <th>ФИО</th>
            <th>E-mail</th>
            <th>Номер телефона</th>
            <th>Заказы</th>
        </tr>
        @foreach (var user in Model.Input.Users)
        {
            <tr>
                <td>@user.User.Id</td>
                <td>@user.Role</td>
                <td>@user.User.FullName</td>
                <td>@user.User.Email</td>
                <td>@user.User.PhoneNumber</td>
                <td>
                    @if (user.Role == "customer")
                    {
                        <a asp-page-handler="OrdersByUser" asp-route-userId="@user.User.Id">@user.User.Profile.Orders.Count</a>
                    }
                </td>
            </tr>

        }
    </table>
</div>