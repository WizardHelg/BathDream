<script>
    function CheckClick(e){
        var ev = e.name;
        var checkbox = document.getElementById(ev);
        if (checkbox.checked == true) checkbox.checked = false;
        else if (checkbox.checked == false) checkbox.checked = true;
    }

    function AutoScale() {
        let width = window.innerWidth; //Ширина окна
        //Если вы хотите проверять по размеру экрана, то вам нужно свойство window.screen.width

        if (width > 1280) {
            ChangeScale("big");
        }
        else if (width <= 1280 && width > 720) {
            ChangeScale("normal");
        }
        else if (width < 720) {
            ChangeScale("small");
        }
    }
</script>